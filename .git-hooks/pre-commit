RUST_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.rs$' || true)

if [ -n "$RUST_FILES" ]; then
  echo "Running clippy on staged Rust files..."
  cargo clippy -- -D warnings --fix $RUST_FILES
  git add $RUST_FILES

  if ! cargo clippy -- -D warnings $RUST_FILES; then
    echo "Clippy found offenses. Please fix them before committing."
    exit 1
  fi

  if ! cargo test; then
    echo "Tests failed offenses"
    exit 1
  fi
fi
